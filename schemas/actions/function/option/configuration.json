{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/bettyblocks/json-schema/edge/schemas/actions/function/option/configuration.json",
  "title": "Configuration",
  "description": "The option configurations for things like validation, visibility or defaults.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "placeholder": {
      "type": "string"
    },
    "dependsOn": {
      "description": "List of other options that this option depends on.",
      "type": "array",
      "items": {
        "option": {
          "type": "string"
        },
        "action": {
          "enum": ["CLEAR"]
        }
      }
    }
  }
}
