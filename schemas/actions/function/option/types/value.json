{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/bettyblocks/json-schema/acceptance/schemas/actions/function/option/types/value.json",
  "title": "Options Type Value",
  "description": "Properties specific to the Value option type.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "Value"
    },
    "allowedKinds": {
      "description": "The options that you want configured for the value.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "enum": [
          "BOOLEAN",
          "FILE",
          "IMAGE",
          "JSON",
          "INTEGER",
          "OBJECT",
          "RECORD",
          "STRING",
          "ARRAY"
        ]
      }
    },
    "validations": {
      "description": "The requirements for the given option.",
      "type": "object",
      "properties": {
        "required": {
          "$ref": "/bettyblocks/json-schema/acceptance/schemas/actions/function/option/validation.json#/definitions/required"
        }
      }
    }
  },
  "required": ["allowedKinds"]
}
