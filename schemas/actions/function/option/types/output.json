{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/bettyblocks/json-schema/acceptance/schemas/actions/function/option/types/output.json",
  "title": "Options Type Output",
  "description": "Properties specific to the Output option type.",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "base": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "type": {
          "enum": ["Boolean", "JSON", "Number", "Text"]
        }
      }
    },
    "inherit": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Inherit"
        },
        "source": {
          "type": "string"
        },
        "toSingleItem": {
          "type": "boolean",
          "default": false
        },
        "scoped": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": ["source"]
    },
    "record": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Record"
        },
        "model": {
          "type": "string"
        },
        "scoped": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": ["model"]
    },
    "collection": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Collection"
        },
        "model": {
          "type": "string"
        },
        "scoped": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": ["model"]
    },
    "object": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Object"
        },
        "schemaModel": {
          "type": "string"
        },
        "scoped": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "array": {
      "type": "object",
      "properties": {
        "type": {
          "const": "Array"
        },
        "dataType": {
          "enum": ["INTEGER", "STRING", "SCHEMA"]
        },
        "schemaModel": {
          "type": "string"
        },
        "scoped": {
          "type": "boolean"
        }
      },
      "anyOf": [
        {
          "properties": {
            "dataType": { "const": "SCHEMA" }
          },
          "required": ["schemaModel"]
        },
        {
          "properties": {
            "dataType": { "enum": ["INTEGER", "STRING"] },
            "schemaModel": false
          }
        }
      ],
      "additionalProperties": false,
      "required": ["dataType"]
    },
    "anyOfType": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "scoped": {
          "type": "boolean"
        },
        "anyOf": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/base" },
              { "$ref": "#/definitions/collection" },
              { "$ref": "#/definitions/inherit" },
              { "$ref": "#/definitions/record" },
              { "$ref": "#/definitions/object" },
              { "$ref": "#/definitions/array" }
            ]
          }
        }
      }
    }
  },
  "properties": {
    "type": {
      "const": "Output"
    },
    "output": {
      "scoped": {
        "type": "boolean"
      },
      "anyOf": [
        { "$ref": "#/definitions/base" },
        { "$ref": "#/definitions/collection" },
        { "$ref": "#/definitions/inherit" },
        { "$ref": "#/definitions/record" },
        { "$ref": "#/definitions/object" },
        { "$ref": "#/definitions/array" },
        { "$ref": "#/definitions/anyOfType" }
      ]
    },
    "validations": {
      "description": "The requirements for the given option.",
      "type": "object",
      "properties": {
        "required": {
          "$ref": "/bettyblocks/json-schema/acceptance/schemas/actions/function/option/validation.json#/definitions/required"
        }
      }
    }
  }
}
